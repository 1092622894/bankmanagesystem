<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gdut.bankmanagesystem.mapper.EmployeeMapper">
    <resultMap id="EmployeeResult" type="Employee"/>

    <select id="queryEmployeeByBankId" resultMap="EmployeeResult" parameterType="Long">
        select e.* from employee e left join department d
        on e.d_id = d.id left join bank b on b.id = d.b_id
        where b.id = #{id}
    </select>
</mapper>
